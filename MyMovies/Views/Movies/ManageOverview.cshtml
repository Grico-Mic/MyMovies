
@model List<MyMovies.ViewModels.MovieManageOverviewModel>

@{
    ViewBag.Title = "Manage Movies";
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
}


@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success" role="alert">
        @ViewBag.SuccessMessage
    </div>
}
<p>
    <a class="btn btn-success float-right" href="/Movies/Create">Create Movie</a>
</p>
@if (Model.Count() == 0)
{
    <p class="text-danger">There is no movies here.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var movie in Model)
            {
                <tr>
                    <td>@movie.Id</td>
                    <td>@movie.Title</td>
                    <td class="text-center">
                        <a class="text-warning" href="/Movies/Update/@movie.Id">Update</a> |
                        <a class="text-danger" href="/Movies/Delete/@movie.Id" onclick="return confirm('Are you sure?')">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

